function toggleNav() {
        var sidebar = document.getElementById("mySidebar"),
    main = document.getElementById("main");
    sidebar.style.width = sidebar.style.width == "207px" ? '0' : '207px';
    main.style.marginLeft = main.style.marginLeft === "200px" ? '0' : '200px';
}

